 '(ahs-default-range (quote ahs-range-whole-buffer))
 '(ahs-idle-interval 0.25)
 '(ahs-idle-timer 0 t)
 '(ahs-inhibit-face-list nil)
 '(ring-bell-function (quote ignore) t)
 '(safe-local-variable-values
   (quote
    ((pony-settings
      (make-pony-project :python "/usr/bin/python" :settings "cestdiego_django/settings.py"))
     (pony-settings
      (make-pony-project :python "/usr/bin/python" :settings "le_blog/settings.py"))))))
